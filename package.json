{
  "name": "d2ext",
  "version": "0.1.0",
  "description": "D2 Diagram Editor for Confluence",
  "private": true,
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:chrome": "BUILD_TARGET=chrome node esbuild.config.mjs",
    "build:firefox": "BUILD_TARGET=firefox node esbuild.config.mjs",
    "watch": "BUILD_TARGET=chrome WATCH=1 node esbuild.config.mjs",
    "clean": "rm -rf dist-chrome dist-firefox",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.36",
    "esbuild": "^0.27.3",
    "jsdom": "^28.0.0",
    "tree-sitter-cli": "^0.26.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.2",
    "@codemirror/language": "^6.12.1",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.13",
    "codemirror": "^6.0.2",
    "web-tree-sitter": "^0.26.5"
  }
}
