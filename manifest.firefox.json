{
  "manifest_version": 2,
  "name": "D2 Diagram Editor for Confluence",
  "version": "0.1.0",
  "description": "Edit and preview D2 diagrams directly on Confluence pages",
  "permissions": [
    "activeTab",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background/service-worker.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content/detector.js", "content/overlay-buttons.js", "content/editor-modal.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "D2 Editor"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
